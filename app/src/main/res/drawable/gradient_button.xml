<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the gradient using your primary and secondary theme colors -->
    <gradient
        android:startColor="@color/primaryColor"
        android:endColor="@color/secondaryColor"
        android:angle="45" />

    <corners android:radius="16dp"/>

    <!-- Optional: Add some padding to ensure the text/icon in the button doesn't touch edges -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
