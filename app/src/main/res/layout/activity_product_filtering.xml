<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/gradientBar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/gradientBar"
        app:layout_constraintBottom_toBottomOf="@id/gradientBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/gradientBar"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="viewStart" />

            <CheckBox
                android:id="@+id/ProductPriceFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter by Price"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/ProductPriceFilterSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:valueFrom="0"
                android:valueTo="10000"
                android:visibility="gone"
                android:layout_marginTop="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CATEGORY"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <CheckBox
                android:id="@+id/categoryCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter by Category"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <CheckBox
                    android:id="@+id/csCategoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CS"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/eeeCategoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EEE"
                    android:textSize="16sp"
                    android:layout_marginStart="24dp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/mathCategoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MATH"
                    android:textSize="16sp"
                    android:layout_marginStart="24dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <CheckBox
                    android:id="@+id/physCategoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHYS"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/chemCategoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHEM"
                    android:textSize="16sp"
                    android:layout_marginStart="24dp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/mbgCategoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MBG"
                    android:textSize="16sp"
                    android:layout_marginStart="24dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <CheckBox
                    android:id="@+id/philCategoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHIL"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/meCategoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ME"
                    android:textSize="16sp"
                    android:layout_marginStart="24dp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/ieCategoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IE"
                    android:textSize="16sp"
                    android:layout_marginStart="24dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <CheckBox
                    android:id="@+id/engCategoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENG"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/histCategoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HIST"
                    android:textSize="16sp"
                    android:layout_marginStart="24dp"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USER RATING"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <CheckBox
                android:id="@+id/ProductUserRatingFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter by Rating"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/ProductUserRatingFilterSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:valueFrom="0"
                android:valueTo="100"
                android:visibility="gone"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/FilterDoneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            app:backgroundTint="@null"
            app:backgroundTintMode="src_over"
            android:background="@drawable/filtersort_button"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/cancelFilteringButton"
            android:layout_width="match_parent"
            app:backgroundTint="@null"
            app:backgroundTintMode="src_over"
            android:layout_height="wrap_content"
            android:background="@drawable/filtersort_button"
            android:text="Cancel Filtering" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
