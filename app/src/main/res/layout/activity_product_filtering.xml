<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-100dp"
    tools:layout_editor_absoluteY="124dp">

    <TextView
        android:id="@+id/FilterText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="100dp"
        android:text="Filter"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/ProductPriceFilterButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="Price"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/FilterText" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/ProductPriceFilterSlider"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:stepSize="1"
        android:valueFrom="0"
        android:valueTo="10000"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProductPriceFilterButton" />

    <CheckBox
        android:id="@+id/categoryCheckbox"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:text="Category"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProductPriceFilterSlider" />

    <CheckBox
        android:id="@+id/csCategoryCheckBox"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="CS"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryCheckbox" />

    <CheckBox
        android:id="@+id/eeeCategoryCheckBox"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:text="EEE"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryCheckbox" />

    <CheckBox
        android:id="@+id/engCategoryCheckBox"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="190dp"
        android:text="ENG"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryCheckbox" />

    <CheckBox
        android:id="@+id/histCategoryCheckBox"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="190dp"
        android:text="HIST"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryCheckbox" />

    <CheckBox
        android:id="@+id/philCategoryCheckBox"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="130dp"
        android:text="PHIL"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryCheckbox" />

    <CheckBox
        android:id="@+id/mbgCategoryCheckBox"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="130dp"
        android:text="MBG"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryCheckbox" />

    <CheckBox
        android:id="@+id/chemCategoryCheckBox"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:text="CHEM"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryCheckbox" />

    <CheckBox
        android:id="@+id/physCategoryCheckBox"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="70dp"
        android:text="PHYS"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryCheckbox" />

    <CheckBox
        android:id="@+id/mathCategoryCheckBox"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="70dp"
        android:text="MATH"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryCheckbox" />

    <CheckBox
        android:id="@+id/meCategoryCheckBox"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:text="ME"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryCheckbox" />

    <CheckBox
        android:id="@+id/ieCategoryCheckBox"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="10dp"
        android:text="IE"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryCheckbox" />

    <CheckBox
        android:id="@+id/ProductUserRatingFilterButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="User Rating"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/histCategoryCheckBox" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/ProductUserRatingFilterSlider"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:stepSize="1"
        android:valueFrom="0"
        android:valueTo="100"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProductUserRatingFilterButton" />

    <Button
        android:id="@+id/FilterDoneButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="244dp"
        android:text="Done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProductUserRatingFilterSlider" />
    />

</androidx.constraintlayout.widget.ConstraintLayout>
